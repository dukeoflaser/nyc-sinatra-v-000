<h1>Create New Figure</h1>
<form method="post" action="/figures/new">
  <input type="text" name="figure[name]" id="figure_name" placeholder="Name">
  <input type="text" name="landmark[name]" id="new_landmark" placeholder="New Landmark">
  <input type="text" name="title[name]" id="new_title" placeholder="New Title">
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %>
  <% end %>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %>
  <% end %>
  <input type="submit" name="create" value="Create New Figure" id="Create New Figure">
</form>